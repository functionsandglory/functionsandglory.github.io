---
const {image, class: className, ...rest} = Astro.props;

const imageUrl = `url(${image})`;
---
<style define:vars={{imageUrl}}>
    .bg-image {
        background-image: var(--imageUrl);
    }
</style>
<div
    class:list={['h-full bg-image bg-cover bg-center bg-fixed', className]}
    {...rest}
/>
