---
const {imageUrl, speed} = Astro.props;
const speedStyle = `${speed}s`;
---
<style define:vars={{speedStyle}}>
    @keyframes bgScroll {
        from {
            transform: translateX(var(--startPos));
        }
        to {
            transform: translateX(var(--endPos));
        }
    }

    .bg-image-1 {
        animation: bgScroll var(--speedStyle) linear infinite;
    }

    .bg-image-2 {
        animation: bgScroll var(--speedStyle) linear infinite;
    }
</style>
<img src={imageUrl} alt="scrolling background" style="--startPos: 0; --endPos: 100%"
     class="bg-image-1 absolute max-w-none min-w-full min-h-full"/>
<img src={imageUrl} alt="scrolling background" style="--startPos: -100%; --endPos: 0"
     class="bg-image-2 absolute max-w-none min-w-full min-h-full"/>
