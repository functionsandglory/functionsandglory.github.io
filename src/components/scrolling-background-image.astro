---
const {imageUrl, speed} = Astro.props;

const imageUrlStyle = `url(${imageUrl})`;
const speedStyle = `${speed}s`;
---
<style define:vars={{imageUrlStyle, speedStyle}}>
    @keyframes bgScroll {
        from {
            background-position-x: 0;
        }
        to {
            background-position-x: 2000px;
        }
    }

    .bg-image {
        background-image: var(--imageUrlStyle);
        animation: bgScroll var(--speedStyle) linear infinite;
    }
</style>
<div class="h-full bg-image bg-repeat bg-fixed"/>
