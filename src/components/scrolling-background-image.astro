---
const {imageUrl, speed} = Astro.props;
const speedStyle = `${speed}s`;

const imageUrlStyle = `url(${imageUrl})`;
---
<style define:vars={{speedStyle, imageUrlStyle}}>
    @keyframes bgScroll {
        from {
            background-position-x: 0;
        }
        to {
            background-position-x: 10000px;
        }
    }

    .bg-image {
        background-image: var(--imageUrlStyle);
        animation: bgScroll var(--speedStyle) linear infinite;
    }
</style>
<div class="relative h-full bg-image bg-repeat-x bg-center bg-[length:auto_100%]" />
