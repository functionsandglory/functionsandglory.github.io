---
const {title, url, image} = Astro.props
---
<div class="flex flex-col gap-4">
    <div class="flex flex-col gap-1">
        <h2 class="text-xl text-stone-300">{title}</h2>
        <a href={url} target="_blank" class="text-blue-300">{url}</a>
    </div>
    <div class="" >
        <img src={image} alt={title}/>
    </div>

    <div class="text-stone-300 flex flex-col gap-4">
        <slot/>
    </div>
</div>