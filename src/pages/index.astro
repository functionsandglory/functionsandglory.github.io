---
import Layer from "../components/layer.astro";
import BackgroundImage from '../components/background-image.astro';
import ScrollingBackgroundImage from "../components/scrolling-background-image.astro";
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Functions & Glory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="/main.css" rel="stylesheet">
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-XGHWEETRM7"></script>
    <script is:inline>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'G-XGHWEETRM7');
    </script>
    <style>
        @font-face {
            font-family: "SF Fedora";
            src: url("/sf-fedora.ttf");
        }
    </style>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Press+Start+2P&family=Silkscreen:wght@700&display=swap');
    </style>
</head>
<body class="relative bg-stone-800 text-white">
<div id="layer-container" style={{perspective: '1px'}} class="relative h-screen bg-stone-200 overflow-x-hidden overflow-y-auto">
    <Layer layer={6}>
        <ScrollingBackgroundImage image="assets/clouds1.svg"/>
    </Layer>
    <Layer layer={5}>
        <BackgroundImage image="assets/mountain1.svg" />
    </Layer>
    <Layer layer={4}>
        <BackgroundImage image="assets/mountain1.svg" />
    </Layer>
    <Layer layer={3}>
        <div class="relative top-1/3 w-full flex flex-col mx-auto text-center animate-in fade-in duration-1000">
            <h1 id="title"
                class="font-fedora font-bold text-[2rem] md:text-[4rem] text-stone-900">
                Functions & Glory</h1>
            <p id="subtitle"
               class="text-stone-800 text-[1rem] md:text-[2rem] italic">
                Ventures in Software</p>
        </div>
    </Layer>
    <Layer layer={2}>
        <BackgroundImage image="assets/mountain3.svg" />
    </Layer>
    <Layer layer={1}>
        <BackgroundImage image="assets/mountain2.svg" />
    </Layer>
    <Layer id="layer1" layer={0}>
        <BackgroundImage image="assets/trees1.svg" />
    </Layer>
    <!--<div class="relative h-full top-full bg-stone-800">-->
    <!--    hello world-->
    <!--</div>-->
</div>
<script>
    history.scrollRestoration = 'manual';

    const layerContainer = document.getElementById('layer-container') as HTMLElement;
    const layer1 = document.getElementById('layer1') as HTMLElement;

    let preventScroll = true;

    layer1.addEventListener('animationend', () => {
        preventScroll = false;
    });

    layerContainer.addEventListener('scroll', () => {
        if (preventScroll) {
            layerContainer.scrollTop = 0;
        }
    });
</script>
</body>
</html>
