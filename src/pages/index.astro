---
import '../main.css'
---
<!DOCTYPE html>
<html lang="en" style="scrollbar-gutter: stable">
<head>
    <meta charset="UTF-8"/>
    <title>Functions & Glory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="/main.css" rel="stylesheet">
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-XGHWEETRM7"></script>
    <script is:inline>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'G-XGHWEETRM7');
    </script>
    <style>
        @font-face {
            font-family: "SF Fedora";
            src: url("/sf-fedora.ttf");
        }
    </style>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Press+Start+2P&family=Silkscreen:wght@700&display=swap');
    </style>
    <style>
        .bg {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background-size: cover;
            background-position-x: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .bg-transition {
            transition: transform 2s;
        }

        #title-container {
            transform: translateY(110%);
        }

        #bg1 {
            background-image: url('/assets/trees1.svg');
        }

        #bg2 {
            background-image: url('/assets/mountain2.svg');
        }

        #bg3 {
            background-image: url('/assets/mountain3.svg');
        }

        #bg4 {
            background-image: url('/assets/mountain1.svg');
        }
    </style>
</head>
<body class="bg-stone-800 text-white">
<div class="flex flex-col relative h-screen bg-gradient-to-t to-sky-100 from-sky-50 overflow-hidden">
    <div id="title-container" class="bg bg-transition z-[2] translate-y-[110%]">
        <div class="relative top-1/3 bg-transition w-full flex flex-col mx-auto text-center">
            <h1 id="title"
                class="font-fedora font-bold text-[2rem] md:text-[4rem] text-stone-900">
                Functions & Glory</h1>
            <p id="subtitle"
               class="text-stone-800 text-[1rem] md:text-[2rem] italic">
                Ventures in Software</p>
        </div>
    </div>
    <div id="bg1" class="bg bg-transition z-[5] translate-y-[160%]"/>
    <div id="bg2" class="bg bg-transition z-[4] translate-y-[140%]"/>
    <div id="bg3" class="bg bg-transition z-[3] translate-y-[120%]"/>
    <div id="bg4" class="bg bg-transition z-[1] translate-y-[100%]"/>
</div>
<div class="relative h-[1500px] bg-stone-800 z-40">
    content
</div>
</body>
<script>
    history.scrollRestoration = 'manual';

    const titleContainer = document.getElementById('title-container') as HTMLElement;
    const bg1 = document.getElementById('bg1') as HTMLElement;
    const bg2 = document.getElementById('bg2') as HTMLElement;
    const bg3 = document.getElementById('bg3') as HTMLElement;
    const bg4 = document.getElementById('bg4') as HTMLElement;

    function transformBG(pixels: number) {
        titleContainer.style.transform = `translateY(${pixels * 0.5}px)`;
        bg1.style.transform = `translateY(${0}px)`;
        bg2.style.transform = `translateY(${pixels * 0.2}px)`;
        bg3.style.transform = `translateY(${pixels * 0.4}px)`;
        bg4.style.transform = `translateY(${pixels * 0.6}px)`;
    }

    function removeBGTransitionClass() {
        const elements = document.getElementsByClassName('bg-transition');

        Array.from(elements).forEach(element => {
            element.classList.remove('bg-transition');
        });
    }

    window.addEventListener('DOMContentLoaded', function () {
        transformBG(0);
    });

    window.addEventListener('beforeunload', function () {
        window.scrollTo(0, 0);
    });

    window.addEventListener('scroll', function () {
        removeBGTransitionClass();
        transformBG(window.scrollY);
    });
</script>
</html>
